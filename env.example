# Zeitzone für den Container
WAOBASE_TZ=Europe/Berlin

# Benutzer-ID für Dateiberechtigungen
WAOBASE_PUID=1000

# Gruppen-ID für Dateiberechtigungen
WAOBASE_PGID=1000

# Port auf dem der Server läuft
WAOBASE_PORT=8080

# Basis-URL der Anwendung
WAOBASE_BASE_URL=http://wao-base.local

# Kommagetrennte Liste der zu scrapenden Radiostationen
WAOBASE_STATIONS=technobase.fm,housetime.fm,hardbase.fm,trancebase.fm,coretime.fm,clubtime.fm,teatime.fm,replay.fm

# Cron-Schedule für das automatische Scraping (alle 2 Stunden)
WAOBASE_CRON_SCHEDULE=0 */2 * * *

# Anzahl der Tage, für die Daten aufbewahrt werden
WAOBASE_RETENTION_DAYS=60

# HTTP-Proxy für externe Anfragen (optional)
WAOBASE_HTTP_PROXY=

# HTTPS-Proxy für externe Anfragen (optional)
WAOBASE_HTTPS_PROXY=

# Node.js Umgebung (development/production)
WAOBASE_NODE_ENV=development

# Log-Level (error, warn, info, debug)
WAOBASE_LOG_LEVEL=info

# Telegram Bot Konfiguration
# Aktiviert den Telegram Bot
WAOBASE_TELEGRAM_ENABLED=false

# Bot Token von @BotFather
WAOBASE_TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook URL für Telegram Bot Updates
WAOBASE_TELEGRAM_WEBHOOK_URL=https://your-domain.com/bot/webhook

# Datenverzeichnis (optional)
WAOBASE_DATA_DIR=./data